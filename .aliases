# silly things
alias starwars="telnet towel.blinkenlights.nl"

# functions
function bak {
  if [[ $(echo $1 | tail -c 5) = ".bak" ]]; then
    echo "bak: file already ends in '.bak'"
  else
    mv $1 $1.bak
  fi
}

function unbak {
  if [[ $(echo $1 | tail -c 5) != ".bak" ]]; then
    echo "unbak: file does not end in '.bak'"
  else
    mv $1 $(echo $1 | head -c -5)
  fi
}
